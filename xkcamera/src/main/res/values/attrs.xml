<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="max_duration" format="integer" />
    <attr name="min_duration" format="integer" />
    <attr name="progress_color" format="color" />
    <attr name="outside_color" format="color" />
    <attr name="inside_color" format="color" />

    <attr name="flash_mode">
        <flag name="off" value="0" />
        <flag name="on" value="1" />
        <flag name="auto" value="2" />
    </attr>

    <attr name="video_quality">
        <flag name="high" value="2000000" />
        <flag name="middle" value="1600000" />
        <flag name="low" value="1200000" />
        <flag name="poor" value="800000" />
        <flag name="funny" value="400000" />
        <flag name="despair" value="200000" />
        <flag name="sorry" value="80000" />
    </attr>

    <attr name="mode">
        <flag name="all" value="0" />
        <flag name="photo" value="1" />
        <flag name="video" value="2" />
    </attr>

    <declare-styleable name="CameraView">
        <attr name="max_duration" />
        <attr name="min_duration" />
        <attr name="progress_color" />
        <attr name="outside_color" />
        <attr name="inside_color" />
        <attr name="mode" />
        <attr name="flash_mode" />
        <attr name="flash_visibility" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CaptureButton">
        <attr name="size" format="dimension" />
        <attr name="progress_color" />
        <attr name="outside_color" />
        <attr name="inside_color" />
    </declare-styleable>

</resources>